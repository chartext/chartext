{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@chartext/chart",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@8.3.1",
  "files": ["dist"],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "import": {
      "default": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "require": {
      "default": "./dist/index.umd.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rimraf dist && rimraf build",
    "tsc": "tsc -b",
    "build": "pnpm tsc && vite build",
    "test": "vitest run",
    "dist": "pnpm clean && vite build && tsc -b ./tsconfig.dist.json"
  },
  "peerDependencies": {
    "canvaskit-wasm": "^0.38.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@chartext/canvaskit": "*",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0",
    "tinycolor2": "^1.6.0"
  }
}
