{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@chartext/chart",
  "version": "0.0.1",
  "description": "React skia canvaskit chart library",
  "keywords": [
    "canvaskit",
    "chart",
    "react",
    "skia"
  ],
  "bugs": "https://github.com/chartext/chartext/issues",
  "license": "MIT",
  "author": {
    "name": "threaddot",
    "email": "threaddot@users.noreply.github.com",
    "url": "https://github.com/threaddot"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/chartext/chartext.git",
    "directory": "packages/chart"
  },
  "scripts": {
    "build": "pnpm tsc && vite build",
    "clean": "rimraf dist && rimraf build",
    "dist": "pnpm tsc && vite build && tsc -b ./tsconfig.dist.json",
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm clean && vitest run",
    "tsc": "pnpm clean tsc -b"
  },
  "dependencies": {
    "@chartext/canvaskit": "workspace:*",
    "bezier-js": "^6.1.3",
    "canvaskit-wasm": "^0.38.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@types/bezier-js": "^4.1.0"
  },
  "peerDependencies": {
    "canvaskit-wasm": "^0.38.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "exports": {
    "import": {
      "default": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "require": {
      "default": "./dist/index.umd.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "module": "./dist/index.js",
  "packageManager": "pnpm@8.5.0",
  "type": "module",
  "types": "./dist/types/index.d.ts"
}
