{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "name": "chartext",
  "version": "1.0.0",
  "license": "MIT",
  "author": "threaddot<threaddot@users.noreply.github.com>",
  "packageManager": "pnpm@8.3.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "tsc": "pnpm -r tsc",
    "dist": "pnpm -r dist",
    "canvaskit": "pnpm --filter @chartext/canvaskit",
    "chart": "pnpm --filter @chartext/chart",
    "examples:chart": "pnpm --filter @examples/chart",
    "syncpack:fix-mismatches": "syncpack fix-mismatches",
    "syncpack:format": "syncpack format",
    "syncpack:list": "syncpack list",
    "lint:check": "eslint --cache --ext .ts,.tsx --ignore-path .eslintignore --config .eslintrc.yml examples/* packages/*",
    "lint:fix": "pnpm lint --fix",
    "prettier:check": "prettier --debug-check --ignore-unknown **/*"
  },
  "devDependencies": {
    "@alloc/fast-rimraf": "^1.0.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@tsconfig/vite-react": "^1.0.1",
    "@types/babel__core": "^7.20.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/tinycolor2": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@webgpu/types": "^0.1.31",
    "eslint": "^8.39.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^9.10.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "syncpack": "^9.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.4",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-progress": "^0.0.7",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1"
  }
}
